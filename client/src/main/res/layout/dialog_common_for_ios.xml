<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_background"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/tv_color_33"
        android:textSize="18sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:minHeight="50dp"
        android:text=""
        android:textColor="@color/tv_color_99"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/ll_chooseBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/view_dialog_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_split_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/db_ios_cancell_selector"
                android:paddingBottom="@dimen/common_dialog_button_padding"
                android:paddingTop="@dimen/common_dialog_button_padding"
                android:text="取消"
                android:textColor="@color/tv_color_66"
                android:textSize="@dimen/dialog_btn_size"
                android:visibility="gone"/>

            <View
                android:id="@+id/view_line_button_center"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/bg_split_line"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/db_ios_sure_selector"
                android:paddingBottom="@dimen/common_dialog_button_padding"
                android:paddingTop="@dimen/common_dialog_button_padding"
                android:text="确定"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/dialog_btn_size"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>